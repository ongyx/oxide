/// - Parameter x: a number.
/// - Returns: the rounded value of x
func round(x) returns {
	
	// TODO: fix for negative numbers!
	// e.g. round(-2.423) should give -2
	
	if x < 0.0 {
		return floor(x - 0.5)
	} else {
		return floor(x + 0.5)
	}
}
